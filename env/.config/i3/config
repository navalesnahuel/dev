# i3 config file (v4)
set $mod Mod4

# Font
font pango:Inter Medium 11

# Autostart
exec_always --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id nm-applet
exec_always --no-startup-id picom 
exec_always --no-startup-id nm-applet
exec_always feh --bg-fill $HOME/Pictures/Wallpapers/cool.jpg
exec_always --no-startup-id nvidia-settings --assign DigitalVibrance=1023 
exec --no-startup-id xinput --set-prop 9 "libinput Accel Profile Enabled" 0, 1
exec --no-startup-id ghostty 
exec --no-startup-id obsidian
exec --no-startup-id zen

exec_always --no-startup-id xset s off
exec_always --no-startup-id xset s noblank
exec_always --no-startup-id xset s 0 0
exec_always --no-startup-id xset dpms 0 0 0
exec_always --no-startup-id xset -dpms

# Volume and media controls
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch workspaces
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move containers to workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Window assignments
assign [class="ghostty"] $ws1
assign [class="zen"] $ws2
assign [class="obsidian"] $ws3

# Bar configuration
bar {
    status_command i3status --config ~/.config/i3/.i3status.conf
    font pango:Inter Medium 12
    mode hide
    hidden_state hide
    modifier $mod
    position top
    tray_output primary
    separator_symbol " | "
    colors {
        background #181818
        statusline #cdd6f4
        separator #585b70
        focused_workspace #89b4fa #1e1e2e #cdd6f4
        active_workspace #585b70 #1e1e2e #cdd6f4
        inactive_workspace #45475a #1e1e2e #9399b2
        urgent_workspace #f38ba8 #1e1e2e #cdd6f4
    }
}

# Window colors
client.focused          #888888 #222222 #c0c0c0 #222222
client.unfocused        #181818 #222222 #888888 #222222
client.urgent #f38ba8 #1e1e2e #cdd6f4 #f38ba8 #f38ba8
client.placeholder #45475a #1e1e2e #9399b2 #45475a #45475a
client.background #181818


# Core keybindings
bindsym $mod+Return exec ghostty
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun -show-icons -location 0 -width 30 -lines 8
bindsym $mod+g exec --no-startup-id rofi -show run -location 0 -width 30 -lines 5
bindsym $mod+Print exec --no-startup-id flameshot gui -c
bindsym $mod+Shift+e exec --no-startup-id i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'
bindsym $mod+Shift+r exec --no-startup-id reload-apps

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left 50 px
bindsym $mod+Shift+j move down 50 px
bindsym $mod+Shift+k move up 50 px
bindsym $mod+Shift+l move right 50 px
bindsym $mod+Ctrl+h resize shrink width 10 px
bindsym $mod+Ctrl+j resize grow height 10 px
bindsym $mod+Ctrl+k resize shrink height 10 px
bindsym $mod+Ctrl+l resize grow width 10 px
bindsym $mod+f fullscreen toggle
bindsym $mod+z floating enable, resize set 1760 1000, move position center
bindsym $mod+Shift+z floating disable, fullscreen disable


# Gaps
for_window [class=".*"] border none
gaps inner 5
gaps outer 2
smart_gaps on
smart_borders on
